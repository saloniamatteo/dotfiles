#!/bin/bash
# Get ThinkPad fan speed

# Get fan level (auto, max, 0-7) + speed (rpm)
level=$(awk '/level:/ {print $2}' /proc/acpi/ibm/fan)
speed=$(awk '/speed:/ {print $2}' /proc/acpi/ibm/fan)

icon="ðŸ’¨"

case $level in
	"auto") level="auto" ;;
	"disengaged"|"full-speed") level="max" ;;
esac

echo "$icon $level ($speed)"
