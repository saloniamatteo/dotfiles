#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pulsemixer --id sink-0 --toggle-mute ;;
	4) pulsemixer --id sink-0 --change-volume +5 ;;
	5) pulsemixer --id sink-0 --chang-volume -5 ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

micstat=$(amixer sget Capture | tail -n 1 | awk '{print $6}' | tr -d "[]")
[[ $micstat = "" ]] && micstat="off"

[ $(pulsemixer --id source-1 --get-mute) = true ] && echo "ðŸ”‡ ðŸŽ¤$micstat" && exit

vol="$(pulsemixer --id sink-0 --get-volume | awk '{print $1}')"
[[ "$vol" = 0 || "$vol" = "" ]] && echo "ðŸ”‡ ðŸŽ¤$micstat" && exit

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

echo "$icon$vol% ðŸŽ¤$micstat"
